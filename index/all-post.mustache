    <h1> Blog Posts ....Lets Read</h1>

    <div>
      <a href="/input-post">Add New Post</a>
    </div>

    <ul>
      {{#posts}}
      <li>
        <label>{{category}}</label>
      </br>
        <label>{{title}}</label>
